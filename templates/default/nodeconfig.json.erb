{
  "capabilities":
      [
        {
          "browserName": "firefox",
          "maxInstances": 8,
          "seleniumProtocol": "WebDriver"
        },
        {
          "browserName": "chrome",
          "maxInstances": 8,
          "seleniumProtocol": "WebDriver"
        }
      ],
  "configuration":
  {
    "proxy": "org.openqa.grid.selenium.proxy.DefaultRemoteProxy",
    "maxSession": 12,
    "port": <%= node['selenium-grid']['node']['port'] %>,
    "host": "<%= node['fqdn'] %>",
    "register": true,
    "registerCycle": 5000,
    "hubPort": <%= node['selenium-grid']['hub']['port'] %>,
    "hubHost": "<%= node['selenium-grid']['hub']['host'] %>"
  }
}
